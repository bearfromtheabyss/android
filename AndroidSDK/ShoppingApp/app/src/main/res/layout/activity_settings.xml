<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.micha.shoppingapp.settingsActivity"
    android:id="@+id/settings_layout">

    <TextView
        android:id="@+id/settings_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Ustawienia" />


    <TextView
        android:id="@+id/size_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_txv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="Rozmiar czcionki:">

    </TextView>


    <TextView
        android:id="@+id/color_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="Kolor czcionki:" />

    <EditText
        android:id="@+id/edit_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_color"
        android:layout_alignStart="@+id/edit_color"
        android:layout_below="@+id/size_txv"
        android:ems="5"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/edit_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color_txv"
        android:layout_centerHorizontal="true"
        android:ems="5"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:onClick="save"
        android:text="Zapisz ustawienia" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.micha.shoppingapp2.MainActivity"
    android:id="@+id/main_layout">

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_txv"
        android:layout_marginTop="19dp">

    <Button
        android:id="@+id/button_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title_txv"
        android:layout_alignStart="@+id/title_txv"
        android:layout_below="@+id/button_opcje"
        android:layout_marginTop="54dp"
        android:onClick="click_lista"
        android:text="@string/lista" />

    <Button
        android:id="@+id/button_opcje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_lista"
        android:layout_alignStart="@+id/button_lista"
        android:layout_below="@+id/title_txv"
        android:layout_marginTop="141dp"
        android:onClick="click_opcje"
        android:text="@string/opcje"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/title_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="@string/lista_zakup_w" />
</RelativeLayout>
